@model Web.Models.Category.DeleteCategoryModel

<h3>Are you sure you want to delete this category (@Model.Name) ?</h3>

<hr />

<div>
    <form asp-action="Delete">
        <div class="form-group">
            <input asp-for="Name" />
        </div>
        <div class="form-group">
            <input asp-for="Id" />
        </div>
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
        </div>
    </form>

    <a asp-action="Index">Back to Categories</a>
</div>
