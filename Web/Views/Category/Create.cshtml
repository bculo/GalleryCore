@model Web.Models.Category.CreateCategoryModel

<h4>Create category</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" id="@nameof(Model.Name)" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryImage" class="control-label"></label>
                <input asp-for="CategoryImage" type="file" id="@nameof(Model.CategoryImage)" class="form-control" />
                <span asp-validation-for="CategoryImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" id="submitForm" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to Categories</a>
</div>

@section Scripts{ 
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    <script src="~/js/file-upload.js" type="text/javascript"></script>

    <script>
        var upload = new FileUpload();

        window.onload = function() {
            upload.setUploadUrl('@Url.Action("CreateAjax", "Category")');

            let token = $('input[name="__RequestVerificationToken"]').val();
            upload.setForgeryToken("__RequestVerificationToken", token);

            $("#submitForm").click(submitFile);
        }

        function submitFile(e) {
            e.preventDefault(); //prevent submit

            let file = $("#@nameof(Model.CategoryImage)").prop('files')[0]; // Get category image
            let name = $("#@nameof(Model.Name)").val(); // Get category name

            if (!name || !file) {
                console.log("Something aint riht");
                return;
            }

            upload.addItem("@nameof(Model.Name)", name);
            upload.setFile("@nameof(Model.CategoryImage)", file);
            upload.uploadForm();
        }
    </script>
}


